<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mickaelg.cleanarchitecture.presentation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
                 android:name="com.mickaelg.cleanarchitecture.presentation.common.AndroidApplication"
                 android:label="@string/app_name"
                 android:theme="@style/AppTheme" >

        <activity android:name="com.mickaelg.cleanarchitecture.presentation.common.activities.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
